<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<cms:collection include="page_control,animation_chain"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<cms:svg file="site-sprite.svg"/>
			<!-- Desktop version -->
			<cms:desktop>
				<header >

					<a href="url_Make('', 'home')" cms:eval="href" class="logo">
						<img 
							src="_BASEURL.'/site/images/logo_shifra.svg'" 
							alt="logo"
							cms:eval="src"
							/>
					</a>
					
					<div id="language">
						<cms:module
							name="language_menu"
							action="print"
							/>
					</div>	

					<nav>

						<a href="#pirsom">
							<cms:text constant="menu_advertise"/>
						</a>

						<a href="#strip">
							<cms:text constant="menu_strip"/>
						</a>

						<a href="#conference">
							<cms:text constant="menu_conference"/>
						</a>

						<a href="#half_ads">
							<cms:text constant="menu_half_adds"/>
						</a>

						<a href="#logo">
							<cms:text constant="menu_logo"/>
						</a>

						<a href="#about">
							<cms:text constant="menu_about"/>
						</a>
					</nav>

					<a
						href="'tel:'.urlencode(Language::getText('phone'))"
						cms:eval="href"
						class="phone"
						>
						<cms:text constant="phone"/>
						<img 
							src="_BASEURL.'/site/images/icon-phone.svg'" 
							alt="logo"
							cms:eval="src"
							/>
					</a>
				</header>
			</cms:desktop>
			<!-- Mobile header -->
			<cms:mobile>
				<header>
					<div class="mobile_title">
						<a href="javascript:void(0)" class="menu"></a>

						<a href="url_Make('', 'home')" cms:eval="href" class="logo">
							<img 
								src="_BASEURL.'/site/images/logo_shifra.svg'" 
								alt="logo"
								cms:eval="src"
								/>
						</a>

						<a
							href="'tel:'.urlencode(Language::getText('phone'))"
							cms:eval="href"
							class="phone"
							>
							<img 
								src="_BASEURL.'/site/images/icon-phone.svg'" 
								alt="logo"
								cms:eval="src"
								/>
						</a>
					</div>
					<nav class="mobile_menu">
						
						<a href="#pirsom">
							<cms:text constant="menu_advertise"/>
						</a>

						<a href="#strip">
							<cms:text constant="menu_strip"/>
						</a>

						<a href="#conference">
							<cms:text constant="menu_conference"/>
						</a>

						<a href="#half_ads">
							<cms:text constant="menu_half_adds"/>
						</a>

						<a href="#logo">
							<cms:text constant="menu_logo"/>
						</a>

						<a href="#about">
							<cms:text constant="menu_about"/>
						</a>
					</nav>
				</header>
			</cms:mobile>

			<section id="pirsom">
				<h2><cms:text constant="menu_advertise"/></h2>
				<br/>
				
				<div class="gallery_wrap">
					<cms:module
						name="gallery"
						action="show_image_list"
						group="gallery_pirsom"
						template="parts/pirsom_image.xml"
						/>
				</div>	
			</section>

			<section id="strip">
				<h2><cms:text constant="menu_strip"/></h2>
				<br/>
				
				<div class="gallery_wrap">
					<cms:module
						name="gallery"
						action="show_image_list"
						group="gallery_strip"
						template="parts/strip_image.xml"
						/>
				</div>	
			</section>

			<section id="conference">
				<h2><cms:text constant="menu_conference"/></h2>
				<br/>
				
				<div class="gallery_wrap">
					<cms:module
						name="gallery"
						action="show_image_list"
						group="gallery_conference"
						template="parts/pirsom_image.xml"
						/>
				</div>	
			</section>

			<section id="half_ads">
				<h2><cms:text constant="menu_half_adds"/></h2>
				<br/>
				
				<div class="gallery_wrap">
					<cms:module
						name="gallery"
						action="show_image_list"
						group="gallery_half"
						template="parts/strip_image.xml"
						/>
				</div>	
			</section>

			<section id="logo">
				<h2><cms:text constant="menu_logo"/></h2>

				<div class="images_container">
					<cms:module
						name="gallery"
						action="show_image_list"
						group="logos"
						template="parts/logos_images.xml"
						/>
				</div>	
			</section>

			<section id="about">
				<h2><cms:text constant="menu_about"/></h2>

				<cms:module
					name="articles"
					action="show"
					text_id="about"
					template="parts/about_article.xml"
					/>

				<ul>
					<cms:module
						name="links"
						action="show_link_list"
						template="parts/contact_article.xml"
						/>
				</ul>

				<cms:module
					name="downloads"
					action="show_list"
					template="parts/downloads.xml"
					/>
			</section>
		</body>
	</html>
</document>
